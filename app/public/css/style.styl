body
  margin 0
  padding 0
  height 100%

#main-container
  margin 70px auto auto 0px

#login-container
  width 340px
  margin 160px auto
  label
    margin 15px 0 5px 5px
  button
    width 140px
    padding 6px 30px 6px 30px
    float left
    margin-top 15px
  #rememember-me
    padding 6px 0px 6px 0px
    margin-left 15px
  .btm-links
    text-align center
    margin-top 10px
  #create-account
    float right
    margin-right 13px
  #forgot-password
    float left
    margin-left 10px

#account-form-container
  width 460px
  margin 100px auto

#country-list
  width 310px

.modal-form-errors
  li
    color #808080
    text-shadow -1px 1px 0 #fff
    -moz-text-shadow -1px 1px 0 #fff
    -webkit-text-shadow -1px 1px 0 #fff
    color #d8000c

.modal-single-input
  width 452px
  margin -200px 0 0 -232px
  form
    color #808080
    text-shadow -1px 1px 0 #fff
    -moz-text-shadow -1px 1px 0 #fff
    -webkit-text-shadow -1px 1px 0 #fff
    margin-bottom 0
    #cancel
      right 110px
    #submit
      float right
  .modal-body
    height 100%
  .modal-footer
    clear both
    height 20px
    button
      width 80px
      margin-top -4px
      margin-right 2px

#print
  padding 20px

#four04
  padding 20px

.clear-fix
  clear both

.well
  margin-left 0
  border 1px solid #ccc

.form-horizontal
  .control-label
    width 80px
  .controls
    margin-left 120px
  .form-buttons
    float right
    margin-right 30px
  input
    width 300px

label
  color #808080
  text-shadow -1px 1px 0 #fff
  -moz-text-shadow -1px 1px 0 #fff
  -webkit-text-shadow -1px 1px 0 #fff

.subheading
  color #808080
  text-shadow -1px 1px 0 #fff
  -moz-text-shadow -1px 1px 0 #fff
  -webkit-text-shadow -1px 1px 0 #fff
  margin-top 3px
