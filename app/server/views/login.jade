
extends layout

block content

  #login-container
    .row
      .col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading Welcome to SuAVE!
          .panel-body
            form#login-form(method='post', role='form')
              fieldset
                p.subheading Please Login To Your Account
                .form-group
                  label Username
                  input#user-tf.form-control.required(type='text', name='user')
                .form-group
                  label Password
                  input#pass-tf.form-control.required(type='password', name='pass')
                .row
                  .col-xs-12
                    button#btn-login.btn.btn-primary(type='submit', style='width:110px; margin-right:10px;')
                      i.icon-lock.icon-white
                      | Sign in
                    button.btn.btn-default#rememember-me(type='button', style='width:110px;')
                      i#check-icon.fa.fa-dot-circle-o
                      |  Remember
                hr
                .row.btm-links
                  a.col-xs-6#forgot-password(href='#') Forgot Your Password?
                  a.col-xs-6#create-account(href='/signup') Create An Account

  include modals/alert
  include modals/lost-password

block scripts
  link(rel='stylesheet', href='/vendor/bootstrap.min.css')
  link(rel='stylesheet', href='/css/home.css')
  script(src='/vendor/jquery.min.js')
  script(src='/vendor/jquery.form.js')
  script(src='/vendor/bootstrap.min.js')
  script(src='/js/views/login.js')
  script(src='/js/controllers/loginController.js')
  script(src='/js/form-validators/loginValidator.js')
  script(src='/js/form-validators/emailValidator.js')
  script(src='/js/data/utils.js')
  script(type='text/javascript', src='/vendor/google-analytics.js')
