doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SuAVE - Edit
    link(href='/vendor/bootstrap.min.css', rel='stylesheet')
    link(href='/css/home.css', rel='stylesheet')
    // Icons
    script(src='/vendor/lumino.glyphs.js')
    script(type='text/javascript', src='/vendor/google-analytics.js')
    //
      if lt IE 9
      script(src='js/html5shiv.js')
      script(src='js/respond.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='')
            span SuAVE
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                svg.glyph.stroked.male-user
                  use(xlink:href='#stroked-male-user')
                |  User
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a#btn-update
                    svg.glyph.stroked.male-user
                      use(xlink:href='#stroked-male-user')
                    |  Profile
                li
                  a#btn-logout
                    svg.glyph.stroked.cancel
                      use(xlink:href='#stroked-cancel')
                    |  Logout
    .col-sm-12.main
      .row
        ol.breadcrumb
          li
            a#btn-save
              svg.glyph.stroked.blank.document
                use(xlink:href='#stroked-blank-document')
              |  Save File
      .row
        #edit-table.hot.handsontable

    include modals/alert
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/bootstrap.min.js')
    script(src='/vendor/handsontable.full.min.js')
    link(href='/vendor/handsontable.full.css', rel='stylesheet')
    script(src='/js/views/edit.js')
    script(src='/js/controllers/editController.js')
