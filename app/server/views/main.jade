doctype html
html
  head
    title SuAVE: Survey Analysis via Visual Exploration
    script(type='text/javascript', src='/vendor/gc-loader.js')
    script(type='text/javascript', src='/vendor/jsapi.js')
    script(type='text/javascript', src='/vendor/google-analytics.js')
  body#suave-body
    header#earthcube-header
      h1
        a.logo(href='http://suave.sdsc.edu:3000', target='_blank')
          img(src='./carnivora_files/suavelogo3-small-copy-e1438196105588.png')
      h2.tagline
      button#comment(type='button', data-toggle='modal', data-target='#comment-dialog')
        | Comment
      button#share(type='button', data-toggle='modal', data-target='#share-dialog')
        | Share
      button#video(onclick="window.open('https://youtu.be/a7adswVonqk?list=PLtNc1yAKFt7d3szAEwjoyUQVWhzLGmPZn', '_blank')") Tutorial Videos
      button#help(onclick='') About Survey
      button#fullscreen Fullscreen
    .embed-responsive
    #comment-dialog.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4.modal-title Comment
          .modal-body
            .row
              #chart_div.col-xs-10.col-xs-offset-1(style='display: block;')
            .row
              .operation-btn(style="text-align:center")
            #comments-table
              table.table.table-striped.table-hover#comment-block(style="table-layout: fixed;")
                tbody#comments-body
            .row#comment-template
          .modal-footer
            button.btn.btn-danger(type='button', data-dismiss='modal') Dismiss
    #share-dialog.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4.modal-title Share
          .modal-body
            .row
              .col-xs-8
                textarea(style="width:100%;")#share-link
              .col-xs-2
                button.btn.btn-raised.btn-info#copy-link(type='button' ) Copy Link
          .modal-footer
            button.btn.btn-danger(type='button', data-dismiss='modal') Dismiss
    #login-dialog.modal.fade
      .modal-dialog.login-modal
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4.modal-title Login
          .modal-body#login-container
            form#login-form.span4(method='post')
              .form-group
                h3 Welcome to SuAVE!
                p.subheading Please Login To Your Account
                label Username
                input#user-tf.form-control.span4.required(type='text', name='user')
                label Password
                input#pass-tf.form-control.span4.required(type='password', name='pass')
                .container(style="width:100%;")
                  .row(style="margin-left:-25px;")
                    .col-xs-6
                      button#btn-login.btn.btn-info.btn-raised(type='submit')
                        i.icon-lock.icon-white
                        | Sign in
                    .col-xs-6
                      button.btn.btn-raised.btn-default#rememember-me(type='button')
                        i#check-icon.fa.fa-dot-circle-o
                        |  Remember Me
                .clear-fix
                hr
                .btm-links
                  a#forgot-password Forgot Your Password?
                  a#create-account(href='/signup' target='_blank') Create An Account
    .modal-alert.modal.fade
      .modal-dialog(style="margin-top:15%;max-width:450px;")
        .modal-content
          .modal-header
            button.close(data-dismiss='modal') x
            h3
          .modal-body
            p
          .modal-footer
            button(data-dismiss="modal")#ok.btn.btn-raised.btn-danger OK
    #modal-loading.modal.fade
      .modal-dialog
        .modal-content
          .modal-body
            .well#loading-well
              .progress-bar Loading...
    #get-credentials.modal.fade
      .modal-dialog(style="margin-top:15%;max-width:450px;")
        .modal-content
          .modal-header
            button.close(data-dismiss='modal') x
            h3 Retrieve Password
          .modal-body
            .form-group
              form#get-credentials-form.well.span5(method='post')
                p(style='color: black;') Please enter the email address associated with your account
                input#email-tf.span5.required(type='text', name='email', style="width:100%;")
                .alert.alert-error.hide
                button.close(data-dismiss='alert')
          .modal-footer(style='padding:10px 15px 10px;')
            button#cancel.btn-raised.btn.btn-default-(data-dismiss='modal') Cancel
            button#retrieve-password-submit.btn.btn-raised.btn-info(type='submit') Submit

