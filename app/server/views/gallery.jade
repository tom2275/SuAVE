doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SuAVE - Gallery
    link(href='/vendor/bootstrap.min.css', rel='stylesheet')
    link(href='/css/home.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/table.css')
    link(rel='stylesheet', href='/css/radio.css')
    // Icons
    script(src='/vendor/lumino.glyphs.js')
    script(type='text/javascript', src='/vendor/google-analytics.js')
    //
      if lt IE 9
      script(src='js/html5shiv.js')
      script(src='js/respond.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          a.navbar-brand(href='')
            span SuAVE
          .pull-right
            button.btn#contact-author Contact Author
    .col-sm-9.col-sm-offset-1.col-lg-10.col-lg-offset-1.main
      // /.row
      .row
        .col-lg-12
          h1.page-header Gallery
          p.page-subheader
      // /.row
      #display-surveys.row

    include modals/contact
    include modals/alert
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/bootstrap.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/js/views/gallery.js')
    script(src='/js/controllers/galleryController.js')
    script.
      !function ($) {
      $(document).on("click","ul.nav li.parent > a > span.icon", function(){
      $(this).find('em:first').toggleClass("glyphicon-minus");
      });
      $(".sidebar span.icon").find('em:first').addClass("glyphicon-plus");
      }(window.jQuery);
      $(window).on('resize', function () {
      if ($(window).width() > 768) $('#sidebar-collapse').collapse('show')
      })
      $(window).on('resize', function () {
      $('.btn-circle').css("width", $('#icon-img').width());
      $('.btn-circle').css("height", $('#icon-img').width());
      $('.btn-circle').css("border-radius", $('#icon-img').width()/6);
      $('.btn-circle').css("font-size", $('#icon-img').width()/4);
      if ($(window).width() <= 767) $('#sidebar-collapse').collapse('hide')
      })
