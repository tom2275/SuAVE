doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SuAVE - Home
    link(href='/vendor/bootstrap.min.css', rel='stylesheet')
    link(href='/css/home.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/table.css')
    link(rel='stylesheet', href='/css/radio.css')
    link(href='/vendor/bootstrap-select.min.css', rel='stylesheet')
    link(href='/vendor/bootstrap-editable.css', rel='stylesheet')
    // Icons
    script(src='/vendor/lumino.glyphs.js')
    script(type='text/javascript', src='/vendor/google-analytics.js')
    //if lt IE 9
      script(src='js/html5shiv.js')
      script(src='js/respond.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='')
            span SuAVE
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                svg.glyph.stroked.male-user
                  use(xlink:href='#stroked-male-user')
                |  User
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a#btn-update
                    svg.glyph.stroked.male-user
                      use(xlink:href='#stroked-male-user')
                    |  Profile
                li
                  a#btn-logout
                    svg.glyph.stroked.cancel
                      use(xlink:href='#stroked-cancel')
                    |  Logout
      // /.container-fluid
    #sidebar-collapse.col-sm-3.col-lg-2.sidebar
      form(role='search')
        .form-group
          input.form-control(type='text', placeholder='Search')
      ul.nav.menu
        li.active
          a(href='/home')
            svg.glyph.stroked.app-window
              use(xlink:href='#stroked-app-window')
            |  Gallery
        li
          a(href='/comments')
            svg.glyph.stroked.notepad
              use(xlink:href='#stroked-notepad')
            |  Annotations

    // /.sidebar
    .col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2.main
      .row
        ol.breadcrumb
          li
            a#btn-addNew
              svg.glyph.stroked.blank.document
                use(xlink:href='#stroked-blank-document')
              |  New Survey
      // /.row
      .row
        .col-lg-12
          h1.page-header Gallery
          p.page-subheader
      // /.row
      .row#display-surveys

    include modals/new-survey
    include modals/select-collection
    include modals/loading
    include modals/confirm
    include modals/warning
    include modals/alert
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/typeahead.bundle.js')
    script(src='/vendor/jquery.ddslick.min.js')
    script(src='/vendor/bootstrap.min.js')
    script(src='/vendor/bootstrap-editable.min.js')
    script(src='/vendor/bootstrap-select.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/js/views/home.js')
    script(src='/js/controllers/homeController.js')
    script(src='/js/data/utils.js')
    script.
      var user=!{udata}
      var name=!{name}
      !function ($) {
      $(document).on("click","ul.nav li.parent > a > span.icon", function(){
      $(this).find('em:first').toggleClass("glyphicon-minus");
      });
      $(".sidebar span.icon").find('em:first').addClass("glyphicon-plus");
      }(window.jQuery);
      $(window).on('resize', function () {
      if ($(window).width() > 768) $('#sidebar-collapse').collapse('show')
      })
      $(window).on('resize', function () {
      if ($(window).width() <= 767) $('#sidebar-collapse').collapse('hide')
      })
